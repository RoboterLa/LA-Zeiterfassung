# API Endpunkte für CRUD-Operationen
@app.route('/api/auftraege', methods=['GET'])
@requires_role('Monteur')
def get_auftraege():
    """Alle Aufträge abrufen"""
    try:
        conn = get_db_connection()
        cursor = conn.cursor()
        
        # Filter-Parameter
        status = request.args.get('status', 'all')
        mitarbeiter = request.args.get('mitarbeiter', session.get('user'))
        
        query = "SELECT * FROM auftraege WHERE 1=1"
        params = []
        
        if status != 'all':
            if status == 'done':
                query += " AND done = 1"
            elif status == 'pending':
                query += " AND done = 0"
        
        if mitarbeiter and mitarbeiter != 'all':
            query += " AND (mitarbeiter = ? OR mitarbeiter IS NULL)"
            params.append(mitarbeiter)
        
        query += " ORDER BY created_at DESC"
        
        cursor.execute(query, params)
        auftraege = cursor.fetchall()
        
        result = []
        for auftrag in auftraege:
            result.append({
                'id': auftrag['id'],
                'art': auftrag['art'],
                'uhrzeit': auftrag['uhrzeit'],
                'standort': auftrag['standort'],
                'coords': auftrag['coords'],
                'details': auftrag['details'],
                'done': bool(auftrag['done']),
                'priority': auftrag['priority'],
                'mitarbeiter': auftrag['mitarbeiter'],
                'created_at': auftrag['created_at']
            })
        
        conn.close()
        return jsonify({'success': True, 'data': result})
    except Exception as e:
        return jsonify({'success': False, 'error': str(e)}), 500

@app.route('/api/auftraege', methods=['POST'])
@requires_role('Monteur')
def create_auftrag():
    """Neuen Auftrag erstellen"""
    try:
        data = request.get_json()
        conn = get_db_connection()
        cursor = conn.cursor()
        
        cursor.execute('''
            INSERT INTO auftraege (art, uhrzeit, standort, coords, details, priority, mitarbeiter)
            VALUES (?, ?, ?, ?, ?, ?, ?)
        ''', (
            data.get('art'),
            data.get('uhrzeit'),
            data.get('standort'),
            data.get('coords'),
            data.get('details'),
            data.get('priority', 'normal'),
            session.get('user')
        ))
        
        conn.commit()
        conn.close()
        
        return jsonify({'success': True, 'message': 'Auftrag erfolgreich erstellt'})
    except Exception as e:
        return jsonify({'success': False, 'error': str(e)}), 500

@app.route('/api/auftraege/<int:auftrag_id>', methods=['PUT'])
@requires_role('Monteur')
def update_auftrag(auftrag_id):
    """Auftrag aktualisieren"""
    try:
        data = request.get_json()
        conn = get_db_connection()
        cursor = conn.cursor()
        
        cursor.execute('''
            UPDATE auftraege 
            SET art = ?, uhrzeit = ?, standort = ?, coords = ?, details = ?, 
                done = ?, priority = ?, mitarbeiter = ?
            WHERE id = ?
        ''', (
            data.get('art'),
            data.get('uhrzeit'),
            data.get('standort'),
            data.get('coords'),
            data.get('details'),
            data.get('done', False),
            data.get('priority', 'normal'),
            data.get('mitarbeiter'),
            auftrag_id
        ))
        
        conn.commit()
        conn.close()
        
        return jsonify({'success': True, 'message': 'Auftrag erfolgreich aktualisiert'})
    except Exception as e:
        return jsonify({'success': False, 'error': str(e)}), 500

@app.route('/api/auftraege/<int:auftrag_id>', methods=['DELETE'])
@requires_role('Monteur')
def delete_auftrag(auftrag_id):
    """Auftrag löschen"""
    try:
        conn = get_db_connection()
        cursor = conn.cursor()
        
        cursor.execute('DELETE FROM auftraege WHERE id = ?', (auftrag_id,))
        conn.commit()
        conn.close()
        
        return jsonify({'success': True, 'message': 'Auftrag erfolgreich gelöscht'})
    except Exception as e:
        return jsonify({'success': False, 'error': str(e)}), 500

# Dashboard API für Statistiken
@app.route('/api/dashboard/stats', methods=['GET'])
@requires_role('Monteur')
def get_dashboard_stats():
    """Dashboard-Statistiken abrufen"""
    try:
        conn = get_db_connection()
        cursor = conn.cursor()
        mitarbeiter = session.get('user')
        
        # Aufträge Statistiken
        cursor.execute('''
            SELECT 
                COUNT(*) as total,
                SUM(CASE WHEN done = 1 THEN 1 ELSE 0 END) as completed,
                SUM(CASE WHEN done = 0 THEN 1 ELSE 0 END) as pending
            FROM auftraege 
            WHERE mitarbeiter = ? OR mitarbeiter IS NULL
        ''', (mitarbeiter,))
        auftraege_stats = cursor.fetchone()
        
        # Arbeitszeit Statistiken
        cursor.execute('''
            SELECT 
                COUNT(*) as total_entries,
                SUM(CASE WHEN end_zeit IS NOT NULL THEN 1 ELSE 0 END) as completed_entries
            FROM arbeitszeit 
            WHERE mitarbeiter = ?
        ''', (mitarbeiter,))
        arbeitszeit_stats = cursor.fetchone()
        
        # Urlaub Statistiken
        cursor.execute('''
            SELECT 
                COUNT(*) as total_requests,
                SUM(CASE WHEN status = 'approved' THEN 1 ELSE 0 END) as approved,
                SUM(CASE WHEN status = 'pending' THEN 1 ELSE 0 END) as pending
            FROM urlaub 
            WHERE mitarbeiter = ?
        ''', (mitarbeiter,))
        urlaub_stats = cursor.fetchone()
        
        conn.close()
        
        return jsonify({
            'success': True,
            'data': {
                'auftraege': {
                    'total': auftraege_stats['total'],
                    'completed': auftraege_stats['completed'],
                    'pending': auftraege_stats['pending']
                },
                'arbeitszeit': {
                    'total_entries': arbeitszeit_stats['total_entries'],
                    'completed_entries': arbeitszeit_stats['completed_entries']
                },
                'urlaub': {
                    'total_requests': urlaub_stats['total_requests'],
                    'approved': urlaub_stats['approved'],
                    'pending': urlaub_stats['pending']
                }
            }
        })
    except Exception as e:
        return jsonify({'success': False, 'error': str(e)}), 500

# Initialize database
init_db()

if __name__ == '__main__':
    app.run(debug=True, host='0.0.0.0', port=5000) 